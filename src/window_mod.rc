// window_mod.rc  â€“  Dialog resource for Window Modifier
#include <winresrc.h>
#include "resource.h"

// Application icon
IDI_APP_ICON ICON "window_mod.ico"

IDD_MAIN_DIALOG DIALOGEX 0, 0, 300, 400
// Note: initial pixel size is set in WM_INITDIALOG (480 x 780); these dialog-unit
// values are placeholder geometry that OnSize() overrides at runtime.
STYLE DS_SETFONT | WS_POPUP | WS_CAPTION | WS_SYSMENU | WS_MINIMIZEBOX | WS_THICKFRAME
CAPTION "Window Modifier"
FONT 9, "Segoe UI"
BEGIN
    // ---- Preview section -------------------------------------------------------
    LTEXT   "Preview",                        IDC_PREVIEW_LABEL,   7,   7, 200, 12
    LTEXT   "How others will see your screen", IDC_PREVIEW_SUBTEXT, 7,  21, 200,  9
    // SS_OWNERDRAW = 0x0000000D
    CONTROL "", IDC_PREVIEW_STATIC, "Static", 0x0000000D,
                7, 33, 286, 100
    CONTROL "", IDC_TAB_SCREENS, "SysTabControl32",
                WS_TABSTOP | WS_CLIPSIBLINGS,
                7, 136, 286, 14

    // ---- Hide applications section ---------------------------------------------
    LTEXT   "Hide applications",            IDC_HIDE_APPS_LABEL, 7, 156, 200, 12
    LTEXT   "Select the windows to hide",   IDC_HIDE_APPS_SUB,   7, 170, 200,  9

    CONTROL "", IDC_WINDOW_LIST, "SysListView32",
                LVS_REPORT | LVS_SINGLESEL | LVS_SHOWSELALWAYS |
                WS_BORDER | WS_TABSTOP,
                7, 182, 286, 70

    // ---- Selected window info --------------------------------------------------
    LTEXT   "", IDC_SELECTED_INFO, 7, 256, 286, 8

    // ---- Operations ------------------------------------------------------------
    GROUPBOX "Operations", IDC_GRP_OPS, 7, 266, 286, 28
    PUSHBUTTON "Hide Window",    IDC_BTN_HIDE,       14, 276,  82, 13
    PUSHBUTTON "Toggle TopMost", IDC_BTN_TOPMOST,   100, 276,  82, 13
    PUSHBUTTON "Unload DLL",     IDC_BTN_UNLOAD_DLL, 186, 276,  82, 13
    AUTOCHECKBOX "Auto-unload DLL", IDC_CHK_AUTO_UNLOAD, 14, 290, 120, 12

    // ---- Process watch section ------------------------------------------------
    GROUPBOX "Process Watch", IDC_GRP_WATCH, 7, 298, 286, 60
    EDITTEXT  IDC_WATCH_EDIT,              14, 313, 195, 13, ES_AUTOHSCROLL
    PUSHBUTTON "Add",    IDC_BTN_WATCH_ADD,    212, 313,  30, 13
    PUSHBUTTON "Remove", IDC_BTN_WATCH_REMOVE, 245, 313,  41, 13
    CONTROL "", IDC_WATCH_LIST, "SysListView32",
                LVS_REPORT | LVS_SINGLESEL | LVS_SHOWSELALWAYS |
                WS_BORDER | WS_TABSTOP,
                14, 330, 272, 23

    // ---- Hidden windows list --------------------------------------------------
    LTEXT   "Hidden Windows:", IDC_GRP_HIDDEN, 7, 368, 80, 8
    CONTROL "", IDC_HIDDEN_LIST, "SysListView32",
                LVS_REPORT | LVS_SINGLESEL | LVS_SHOWSELALWAYS |
                WS_BORDER | WS_TABSTOP,
                7, 309, 286, 50
    PUSHBUTTON "Show Selected", IDC_BTN_SHOW, 7, 363, 72, 13

    // ---- Status bar -----------------------------------------------------------
    LTEXT   "Ready", IDC_STATUS_TEXT, 7, 382, 286, 8

    // ---- Cursor checkbox (positioned by OnSize, same row as preview label) ---
    AUTOCHECKBOX "Show cursor in preview", IDC_CHK_SHOW_CURSOR, 160, 7, 133, 12

    // ---- Show desktop preview checkbox (positioned by OnSize, same row as preview label) -
    AUTOCHECKBOX "Show desktop preview", IDC_CHK_SHOW_PREVIEW, 7, 135, 140, 12

    // ---- Full-page placeholder shown when the app loses focus -----------------
    // SS_CENTER|SS_CENTERIMAGE = 0x0201; starts hidden (no WS_VISIBLE)
    CONTROL ":)", IDC_PLACEHOLDER_LABEL, "Static",
            0x00000201,   // SS_CENTER | SS_CENTERIMAGE, without WS_VISIBLE
            0, 0, 300, 400
END
